<%= form_for @user, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
  <%= f.label :username, 'Enter Username' %> 
  <%= f.text_field :username %><br />
  <%= f.label :password %>
  <%= f.email_field :email %><br />
  <%= f.label :password %>
  <%= f.password_field :password %><br />
  <%= f.submit "Submit" %>
<% end %>